<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.angelo.mypersonalalarm.Settings">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Gaming Mode"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView" />

    <CheckBox
        android:id="@+id/cb_alarmeveryhour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Gaming Mode (Alarm Every Hour)"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <CheckBox
        android:id="@+id/cb_sunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sunday"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="19dp"
        android:text="Repeat"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/cb_alarmeveryhour"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/cb_monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:layout_below="@+id/cb_sunday"
        android:layout_alignStart="@+id/cb_sunday" />

    <CheckBox
        android:id="@+id/cb_tues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cb_monday"
        android:layout_below="@+id/cb_monday"
        android:text="Tuesday" />

    <CheckBox
        android:id="@+id/cb_wed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:layout_below="@+id/cb_tues"
        android:layout_alignStart="@+id/cb_sunday" />

    <CheckBox
        android:id="@+id/cb_thurs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cb_wed"
        android:layout_below="@+id/cb_wed"
        android:text="Thursday" />

    <CheckBox
        android:id="@+id/cb_sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cb_thurs"
        android:layout_below="@+id/cb_thurs"
        android:text="Saturday" />

    <CheckBox
        android:id="@+id/cb_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday"
        android:layout_below="@+id/cb_sat"
        android:layout_alignStart="@+id/cb_sat" />
</RelativeLayout>
